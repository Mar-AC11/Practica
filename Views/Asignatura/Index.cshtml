@model List<Practica.Models.TableModelAsignatura.AsignaturaTableModel>
@{
    ViewBag.Title = "Asignaturas";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:10px;">
    <a href="~/Asignatura/Nuevo" class="btn btn-primary">Nuevo</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Nombre de la asignatura</th>
                <th>Carrera</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.IdAsignatura</td>
                    <td>@oElemento.NomAsignatura</td>
                    <td>@oElemento.NomCarrera</td>
                    <td>
                        <a class="btn btn-primary" href="~/Asignatura/Editar/@oElemento.IdAsignatura">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="btn btn-danger" href="javascript:void(0);" onclick="confirmaEliminar(@oElemento.IdAsignatura)">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function confirmaEliminar(id) {
        if (confirm("¿Está seguro de que desea eliminar este registro?")) {
            window.location.href = '/Asignatura/Eliminar/' + id;
        }
    }</script>