@model List<Practica.Models.TableModelDocente.DocenteTableModel>
@{
    ViewBag.Title = "Docentes";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:10px;">
    <a href="~/Docente/Nuevo" class="btn btn-primary">Nuevo</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Cedula</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Asignatura</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.IdDocente</td>
                    <td>@oElemento.Cedula</td>
                    <td>@oElemento.Nombre</td>
                    <td>@oElemento.ApPaterno</td>
                    <td>@oElemento.ApMaterno</td>
                    <td>@oElemento.NomAsignatura</td>
                    <td>
                        <a class="btn btn-primary" href="~/Docente/Editar/@oElemento.IdDocente">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="btn btn-danger" href="javascript:void(0);" onclick="confirmaEliminar(@oElemento.IdDocente)">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function confirmaEliminar(id) {
        if (confirm("¿Está seguro de que desea eliminar este registro?")) {
            window.location.href = '/Docente/Eliminar/' + id;
        }
    }</script>