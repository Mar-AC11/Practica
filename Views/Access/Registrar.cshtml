@model Practica.Models.Login.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>Registrar</title>
</head>
<body>
    <div class="container login-container">
        <div class="login-box">
            <h2 class="text-center">Registrar</h2>
            @using (Html.BeginForm("Registrar", "Access", FormMethod.Post, new { id = "frm" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.NomUsuario, "Usuario")
                    @Html.TextBoxFor(m => m.NomUsuario, new { @class = "form-control", @id = "user" })
                    @Html.ValidationMessageFor(m => m.NomUsuario)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Contrasena, "Contraseña")
                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", @id = "password" })
                    @Html.ValidationMessageFor(m => m.Contrasena)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmarContra, "Confirmar Contraseña")
                    @Html.PasswordFor(m => m.ConfirmarContra, new { @class = "form-control", @id = "confirmPassword" })
                    @Html.ValidationMessageFor(m => m.ConfirmarContra)
                </div>
                <button type="submit" class="btn btn-success btn-block">Registrar</button>
                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        ¿Tienes una cuenta? <a href="@Url.Action("Index", "Access")" class="ml-2">Iniciar Sesión</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
